{% extends 'adminbase.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
<div class="container-fluid">
    <h4 class="page-title">Couettes et Cafés</h4>
    <div class="row">
        <div class="col-lg-12">
            {% if rooms %}
            <div class="card widget-flat">
                <div class="card-body">
                    <table class="table table-borderless table-centered mb-0">
                    <tbody>
                    {% for room in rooms %}
                        <tr class="admin-room">
                            <td>{{ room.id }}</td>
                            <td>{{ room.summary }}<br><span class="text-muted font-13">Intitulé</span></td>
                            <td>{{ room.description }}<br><span class="text-muted font-13">Description</span></td>
                            <td>{{ room.owner }}<br><span class="text-muted font-13">Propriétaire</span></td>
                            <td><a href="{{ path('admin_room_edit', {'id': room.id}) }}" class="btn btn-primary" role="button">Éditer</a> <a href="{{ path('admin_room_delete', {'id': room.id   }) }}" class="btn btn-danger" role="button">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                    </table>
                </div>
            </div>
            {% else %}
            <div class="alert alert-info">
                Pas de chambre enregistrée.
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}