{% extends 'adminbase.html.twig' %}

{% block title %}Propriétaires{% endblock %}

{% block body %}
<div class="container-fluid">
    <h4 class="page-title">Propriétaires</h4>
    <div class="row">
        <div class="col-lg-12">
            {% if owners %}
            <div class="card widget-flat">
                <div class="card-body">
                    <table class="table table-borderless table-centered mb-0">
                    <tbody>
                    {% for owner in owners %}
                        <tr class="admin-room">
                            <td>{{ owner.id }}</td>
                            <td>{{ owner }}<br><span class="text-muted font-13">Propriétaire</span></td>
                            <td>{{ owner.country }}<br><span class="text-muted font-13">Pays</span></td>
                            <td>{{ owner.address }}<br><span class="text-muted font-13">Adresse</span></td>
                            <td><a href="{{ path('admin_owner_delete', {'id': owner.id}) }}" class="btn btn-danger" role="button">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                    </table>
                </div>
            </div>
            {% else %}
            <div class="alert alert-info">
                Pas de message propriétaire enregistré.
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}