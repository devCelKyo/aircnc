{% extends 'adminbase.html.twig' %}

{% block title %}Modération{% endblock %}

{% block body %}
<div class="container-fluid">
    <h4 class="page-title">Modération des commentaires</h4>
    <div class="row">
        <div class="col-lg-12">
            {% if commentaires %}
            <div class="card widget-flat">
                <div class="card-body">
                    <table class="table table-borderless table-centered mb-0">
                    <tbody>
                    {% for commentaire in commentaires %}
                        <tr class="admin-room">
                            <td>{{ commentaire.id }}</td>
                            <td>{{ commentaire.content }}<br><span class="text-muted font-13">Contenu</span></td>
                            <td>{{ commentaire.note }}/5<br><span class="text-muted font-13">Note</span></td>
                            <td>{{ commentaire.author }}<br><span class="text-muted font-13">Auteur</span></td>
                            <td>{{ commentaire.date|date("d/m/Y") }}<br><span class="text-muted font-13">Date</span></td>
                            <td><a href="{{ path('admin_moderation_confirm', {'id': commentaire.id}) }}" class="btn btn-success" role="button">Confirmer</a> <a href="{{ path('admin_moderation_delete', {'id': commentaire.id}) }}" class="btn btn-danger" role="button">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                    </table>
                </div>
            </div>
            {% else %}
            <div class="alert alert-success">
                Pas de message à modérer, beau boulot !
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}