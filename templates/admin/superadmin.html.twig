{% extends 'adminbase.html.twig' %}

{% block title %}Superadmin{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-5">
        <div class="card widget-flat">
            <div class="card-body">
                <h4 class="page-title">Ajouter un collaborateur</h4>
                {{ form(form) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-title">Comptes collaborateurs</h4>
            {% if admins %}
            <div class="card widget-flat">
                <div class="card-body">
                    <table class="table table-borderless table-centered mb-0">
                    <tbody>
                    {% for admin in admins %}
                        <tr class="admin-room">
                            <td>{{ admin.id }}</td>
                            <td>{{ admin.email }}<br><span class="text-muted font-13">Email</span></td>
                            <td>{{ admin.firstname }}/5<br><span class="text-muted font-13">Prénom</span></td>
                            <td>{{ admin.lastname }}<br><span class="text-muted font-13">Nom</span></td>
                            <td>{{ admin.username }}<br><span class="text-muted font-13">Pseudonyme</span></td>
                            <td><a href="{{ path('superadmin_edit', {'id': admin.id}) }}" class="btn btn-success" role="button">Éditer</a> <a href="{{ path('superadmin_delete', {'id': admin.id}) }}" class="btn btn-danger" role="button">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                    </table>
                </div>
            </div>
            {% else %}
            <div class="alert alert-info">
                Pas de compte collaborateur enregistré.
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}